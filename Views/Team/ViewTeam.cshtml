<head>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <style>
        body {
            font-family: 'Montserrat';
            font-size: 12px;
        }

        .btn-secondary {
            color: #495057;
            background-color: #e9ecef;
            border-style: groove;
            border-width: 2px;
            border-color: #dee2e6;
        }

            .btn-secondary span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .btn-secondary span:after {
                    content: '\00bb';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: -20px;
                    transition: 0.5s;
                }

            .btn-secondary:hover span {
                padding-right: 25px;
            }

                .btn-secondary:hover span:after {
                    opacity: 1;
                    right: 0;
                }
    </style>
</head>

@model Team
<h3>@Model.TeamName Information</h3>

<button type="button" class="btn-secondary" onclick="updateTeam()"><span>Update Team Record</span></button>
<table class="table">
    <tr>
        <th>Team Name</th>
        <th>Conference</th>
        <th>GP</th>
        <th>Wins</th>
        <th>Losses</th>
        <th>Draws</th>
        <th>GF</th>
        <th>GA</th>
        <th>GD</th>
        <th>pts</th>
    </tr>
    <tr>
        <td>@Model.TeamName</td>
        <td>@Model.Conference</td>
        <th>@Model.GamesPlayed</th>
        <td>@Model.Wins</td>
        <td>@Model.Losses</td>
        <td>@Model.Draws</td>
        <td>@Model.GoalsFor</td>
        <td>@Model.GoalsAgainst</td>
        <td>@Model.GoalDifference</td>
        <td>@Model.Points</td>
    </tr>
</table>

<div style="display:block">

    @using (Html.BeginForm("DeleteTeam", "Team", "Post"))
    {
        <input type="hidden" asp-for="TeamName" value="@Model.TeamName" />
        <input class="btn-secondary" type="submit" onclick="return confirm('Are you sure?')" value="Delete this team" />
    }

</div>

<script type="text/javascript">
    function updateTeam() {
        window.location = "/Team/UpdateTable/@Model.TeamID";
    }
</script>